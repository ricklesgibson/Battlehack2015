<section id="events" class="container">
  <div class="dots col-md-12">
  <div class="col-md-4 col-md-offset-4 ms-formfield fill-in">


  <h1>Create An Event</h1>

   <%= bootstrap_form_for(@event) do |f| %>

        <div class="field">
          
          <%= f.date_field :date, placeholder: "Date" %>
        </div>

        <div class="field">
          <%= f.text_field :address, placeholder: "Address" %>
        </div>

        <div class="field">
          <%= f.text_field :title, placeholder: "Title" %>
        </div>

        <div class="field">
          <%= f.text_field :invited, placeholder: "Invited" %>
        </div>

        <div class="actions">
          <%= f.submit "Create An Event", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>

</section>