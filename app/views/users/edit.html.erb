
<section id="blank-bg" class="container">
  <div class="dots col-md-12">
    <div id="welcome"></div>
  <div class="col-md-4 col-md-offset-4 ms-formfield fill-in">
    <h1>User Profile</h1>
    <%= bootstrap_form_for(@user) do |f| %>
